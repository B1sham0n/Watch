<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:id="@+id/layoutWithTimeZone"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:paddingTop="15dp"
        android:paddingBottom="15dp">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/bcgGradientCenter"
            android:weightSum="100">
    <TextView
            android:id="@+id/tvNameGMT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="60"
            tools:text="Moscow"
            android:text="Moscow"
            android:textSize="25sp"
            android:gravity="center"
            android:textColor="@android:color/white"
    />
    <TextView
            android:id="@+id/tvTimeGMT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="39"
            android:gravity="right"
            android:layout_gravity="center_horizontal"
            android:textSize="25sp"
            android:textColor="@android:color/white"
            tools:text="12:35" />
    <Button
            android:id="@+id/btnCancelGMT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:backgroundTint="@color/enableButtons"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:background="@drawable/ic_cancel"
            android:foregroundTint="@android:color/holo_red_dark"/>
    </LinearLayout>
</LinearLayout>